<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

  <persistence-unit name="helloCdiPU">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/ratispherdDatasource</jta-data-source>
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <!-- 2014のdialectはまだ存在しない -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServer2012Dialect" />
      <property name="hibernate.default_schema" value="dbo" />
      <!-- hibernate.hbm2ddl.autoでcreate-dropを指定した場合、オブジェクトIDの生成方法をSequenceにする -->
      <property name="hibernate.id.new_generator_mappings" value="true" />
      <!-- 実行時にテーブルなどの作成を行うかどうか -->
      <!-- update      存在しなければ自動的に作成   -->
      <!-- create-drop 削除して再作成する           -->
      <!-- validate        検証のみ               -->
      <property name="hibernate.hbm2ddl.auto" value="create-drop" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="jboss.entity.manager.factory.jndi.name" value="java:/ratispherdEntityManagerFactory" />
      <property name="jboss.entity.manager.jndi.name" value="java:/ratispherdEntityManager" />

      <property name="hibernate.cache.use_second_level_cache" value="true" />
      <property name="hibernate.cache.use_query_cache" value="true" />
      <!-- https://hibernate.atlassian.net/browse/HHH-6911 -->
      <property name="hibernate.discriminator.ignore_explicit_for_joined" value="true" />

<!--
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.jbc2.MultiplexedJBossCacheRegionFactory"/>
-->
      <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup" />
    </properties>
  </persistence-unit>

</persistence>
